<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/time_item_name"
        android:layout_marginLeft="16dp"
        app:layout_constraintTop_toTopOf="@id/time_item_hmm"
        app:layout_constraintBottom_toBottomOf="@+id/time_item_hmm"
        app:layout_constraintLeft_toLeftOf="parent"
        />

    <TextClock
        android:id="@+id/time_item_aa"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:format12Hour="aa"
        android:textSize="15dp"
        app:layout_constraintBottom_toBottomOf="@+id/time_item_hmm"
        app:layout_constraintEnd_toStartOf="@+id/time_item_hmm"
        app:layout_constraintTop_toTopOf="@+id/time_item_hmm"
        app:layout_constraintVertical_bias="0.75" />

    <TextClock
        android:id="@+id/time_item_hmm"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:format12Hour="h:mm"
        android:textSize="30dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.75"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.1" />

    <TextClock
        android:id="@+id/time_item_more"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:format12Hour="M月dd日"
        android:textSize="15dp"
        app:layout_constraintBottom_toBottomOf="@+id/time_item_hmm"
        app:layout_constraintLeft_toRightOf="@+id/time_item_hmm"
        app:layout_constraintTop_toTopOf="@+id/time_item_hmm"
        app:layout_constraintVertical_bias="0.75" />

</androidx.constraintlayout.widget.ConstraintLayout>